<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="2"
    android:background="#000000"
    tools:context="com.example.tuongdung.viewpager.TabFragment3">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:src="@drawable/baner"/>

        <TextView
            android:paddingLeft="20dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Tin Game"
            android:ems="10"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textColor="#d3a0d7"
            android:id="@+id/editText"
            android:textStyle="bold"/>

    </LinearLayout>
    <TableLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:stretchColumns="2"
        android:layout_gravity="center"
        android:background="#e9eaec"
        >
        <TableRow >
            <ImageView
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:src="@drawable/bao_tri"
                android:paddingLeft="10dp"/>

            <TextView
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_gravity="fill_horizontal"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Bảo trì máy chủ  "
                android:textColor="#2d769a" />
        </TableRow>
        <TableRow>
            <ImageView
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:paddingLeft="10dp"
                android:src="@drawable/phien_ban" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="fill_horizontal"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:text="Phiên bản cập nhật 8.21 "
                android:textColor="#2d769a"/>
        </TableRow>

    </TableLayout>

</LinearLayout>